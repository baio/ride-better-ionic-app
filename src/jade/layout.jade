doctype html
html // (manifest="app.manifest")
head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title Ride Better

    link(href='css/app.bundle.css', rel='stylesheet')

    if !env.release
        link(href='css/style.css', rel='stylesheet')
        link(href='css/chart.css', rel='stylesheet')

    block header

    if env.platform == 'cordova'
        script(src='cordova.js')
        if env.debug
            script(src='http://#{env.weinreUrl}/target/target-script-min.js#anonymous')
    else
        if env.debug
            script(src="http://localhost:35729/livereload.js")

    if !env.release
        script(src='ionic.bundle.js')
        script(src='app.bundle.dev.js')
        script(src='app.js')
    else
        script(src='app.bundle.js')

    body(ng-app='ride-better')

        div(type="text/html" id="body_ru")
            - var resources = i18n.ru.resources                
                include body    


        div(type="text/html" id="body_en")
            - var resources = i18n.en.resources
                include body    
