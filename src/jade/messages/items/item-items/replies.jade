ion-item.item.item-text-wrap(ng-repeat="reply in board.data.currentThread.replies") 
    h3
        | {{::reply.user.name}} &nbsp;
        i.ion-ios-clock-outline &nbsp;
        | {{::reply.created | amCalendar}}
    p.long-read.item-text-wrap {{reply.data.text}}              
    p(ng-if="::reply.formatted.canEdit")
      a.subdued(ng-click="board.removeReply(board.data.currentThread, reply)")
        i.icon.ion-trash-b &nbsp; {{ ::resources.str.remove }}
      a.subdued(ng-click="board.openReplyModal(reply, 'edit')")
        i.icon.ion-edit &nbsp; {{ ::resources.str.edit }}
