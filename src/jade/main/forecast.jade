ion-view(ng-attr-title="{{spot.title}}")
    ion-content.has-header
        .list
            .item.item-text-wrap(ng-repeat="item in forecast")
                h2 {{item.time | amDateFormat: 'dddd, Do MMMM'}}
                h3 {{item.summary}}
                span(ng-if="item.precipType") {{item.precipType | res}}&nbsp;
                    span(ng-if="item.precipAccumulation") {{item.precipAccumulation | round:1}} {{culture.unitsNames.height | res}}.
                    br
                | {{item.temperatureMin | round | plus}}&deg;{{culture.unitsNames.temp}}  &mdash;
                | {{item.temperatureMax | round | plus}}&deg;{{culture.unitsNames.temp}}

