ion-view(ng-attr-title="{{::state.spot.title}}")
    ion-content.has-header
        .row
            .col
                img(ng-src="{{::resort.headerThumb}}" width="100%", height="200px")
        .row(ng-if="::resort.geo")
            .col(ng-bind-html="::resort.geo | geo")                
        .row
            .col
                | {{::resort.description}}
        .row
            .col
                ul
                    li(ng-repeat="txt in ::resort.proscons.pros") {{::txt}}.
            .col
                ul
                    li(ng-repeat="txt in ::resort.proscons.cons") {{::txt}}.
