ion-view(ng-attr-title="{{state.spot.title}}")
  div(ng-if="current.meta.type === 'img'")
    .bar.bar-subheader
      button.button.button-clear.ion-arrow-left-c(ng-click="loadNext()")
      h2.title {{current.meta.created | amCalendar}}
      button.button.button-clear.ion-arrow-right-c(ng-click="loadPrev()")
    ion-content.has-header.has-subheader
      .card
        .item
          img.webcam-img(ng-src='{{current.meta.src}}' open-external="{{current.meta.src}}" width="100%")
  div(ng-if="current.meta.type === 'stream'")
    ion-content.has-header
      .card
        .item        
          div.webcam-stream-container(style="width: 100%; text-align: center")
            iframe.webcam-stream(src="{{current.meta.src}}" height="300" width="330"  frameborder="0" seamless="seamless")
  ion-footer-bar.bar-positive(ng-show="list")
    .item.item-input
      select(ng-options="cam.title for cam in list" ng-model="currentItem" ng-change="loadLatest()" style="border: none")
