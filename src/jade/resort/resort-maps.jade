ion-view(ng-attr-title="#{resources.str.maps} - {{::state.spot.title}}")
    ion-content.has-header
        .padding-top
        ion-slide-box(does-continue="true" show-pager="false" ng-if="::resort.maps.length !== 0" id="resort_maps")
            ion-slide.box(ng-repeat="map in ::resort.maps")
                img(width="100%" ng-src="{{::map.img.thumb}}" open-external="{{::map.img.orig}}")
    ion-footer-bar.bar-positive.bar-clear
        button.button.button-clear.ion-arrow-left-c(ng-click="movePrev()")
        | &nbsp;
        button.button.button-clear.ion-arrow-right-c(ng-click="moveNext()")

                
