ion-view(ng-attr-title="{{state.spot.title}}")
    ion-content.has-header
        button.button.button-royal(ng-click="getPhoto()" ng-file-select accept="image/*" ng-file-change="attachPhoto(attachedFile)" ng-model="attachedFile" type="file")
            i.icon.ion-image &nbsp; Attach photo
        img(ng-src="{{data.photo.src}}" heigth="70px" width="50px" style="margin-left: 30px; margin-top: 5px;")
        .list
            label.item.item-input.item-floating-label
                span.input-label {{'Title' | res}}
                input(type="text" ng-model="data.title" placeholder="{{'Title' | res}}")
            label.item.item-input.item-select
                .input-label {{'Tag' | res}}
                select(ng-options="tag.name for tag in tagsList", ng-model="data.tag")
        .button-bar
            a.button.button-stable(ng-click="cancel()") {{'Cancel' | res}}
            a.button.button-stable(ng-click="send()") {{'Send' | res}}
