ion-view(ng-attr-title="{{homeLabel}}")
    ion-content.has-header
        .list
            .item.text-center(ui-sref="tab.reports")
                span {{snapshot.report.summary}}
            .item.text-center(ui-sref="tab.forecast")
                span Today : {{snapshot.forecast.summary}}
                br
                span Min : {{snapshot.forecast.temperatureMin}} &nbsp;
                span Max : {{snapshot.forecast.temperatureMax}}
        button.button.button-block.button-positive(ui-sref="tab.report")
            i.icon.ion-ios7-chatboxes-outline &nbsp; {{res.str.report}}
        button.button.button-block.button-assertive(on-tap="sendReport('closed')")
            i.icon.ion-ios7-locked-outline &nbsp; {{res.str.closed}}
