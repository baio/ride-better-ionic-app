ion-view(ng-attr-title="{{homeLabel}}")
    ion-content.has-header
        .list
            .item.item-text-wrap.text-center(ui-sref="tab.reports")
                span {{snapshot.report.summary | capitalize}}
            .item.item-text-wrap.text-center(ui-sref="tab.forecast")
                | {{snapshot.forecast.summary}}
                br
                span {{'Min' | res}} : {{culture.temp(snapshot.forecast.temperatureMin) | round | plus}}&deg;{{culture.tempU()}} &nbsp;
                span {{'Max' | res}} : {{culture.temp(snapshot.forecast.temperatureMax) | round | plus}}&deg;{{culture.tempU()}}
        button.button.button-block.button-positive(ng-click="sendReport()")
            i.icon.ion-ios7-chatboxes-outline &nbsp; {{'Report' | res}}
        button.button.button-block.button-assertive(ng-click="closedReport()")
            i.icon.ion-ios7-locked-outline &nbsp; {{'Closed' | res}}
