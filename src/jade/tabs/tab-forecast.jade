ion-view(ng-attr-title="{{homeLabel}}")
    ion-content.has-header(delegate-handle="forecast-scroll")
        .list
            .item(ng-repeat="item in forecast")
                h3
                | {{item.summary}}
                br
                | {{item.precipType}} {{item.precipAccumulation}}
                br
                | {{item.temperatureMax}} {{item.temperatureMin}} {{item.time}}

