<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.ionicframework.ridebetter" version="1.12.0" xmlns="http://www.w3.org/ns/widgets" versionCode="011200"
        xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Ride Better</name>
    <description>
        Ski resorts local reports and forecast
    </description>
    <author email="max.putilov@gmail.com" href="http://data-avail.com/">
        Max Putilov
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <preference name="phonegap-version" value="3.6.3" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="DisableBouncyScrolling" value="true" />
    <preference name="CameraUsesGeolocation" value="false" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <gap:platform name="ios"/>
    <gap:platform name="android"/>
    <gap:platform name="winphone"/>

    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-targetSdkVersion" value="19" />

    <!-- icons -->

    <gap:icon src="icon.png" />

    <!-- iPhone / iPod Touch  -->
    <gap:icon src="res/icon/60.png" gap:platform="ios" width="60" height="60"/>
    <gap:icon src="res/icon/120.png" gap:platform="ios" width="120" height="120"/>

    <!-- iPad -->
    <gap:icon src="res/icon/76.png" gap:platform="ios" width="76" height="76"/>
    <gap:icon src="res/icon/152.png" gap:platform="ios" width="152" height="152"/>

    <!-- Settings Icon -->
    <gap:icon src="res/icon/29.png" gap:platform="ios" width="29" height="29"/>
    <gap:icon src="res/icon/58.png" gap:platform="ios" width="58" height="58"/>

    <!-- Spotlight Icon -->
    <gap:icon src="res/icon/40.png" gap:platform="ios" width="40" height="40"/>
    <gap:icon src="res/icon/80.png" gap:platform="ios" width="80" height="80"/>

    <!-- iPhone / iPod Touch -->
    <gap:icon src="res/icon/57.png" gap:platform="ios" width="57" height="57" />
    <gap:icon src="res/icon/114.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <gap:icon src="res/icon/72.png" gap:platform="ios" width="72" height="72" />
    <gap:icon src="res/icon/144.png" gap:platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->
    <gap:icon src="res/icon/29.png" gap:platform="ios" width="29" height="29" />
    <gap:icon src="res/icon/58.png" gap:platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <gap:icon src="res/icon/50.png" gap:platform="ios" width="50" height="50" />
    <gap:icon src="res/icon/100.png" gap:platform="ios" width="100" height="100" />

    <!-- Android -->
    <gap:icon src="res/icon/36.png" gap:platform="android" gap:qualifier="ldpi" />
    <gap:icon src="res/icon/48.png" gap:platform="android" gap:qualifier="mdpi" />
    <gap:icon src="res/icon/72.png" gap:platform="android" gap:qualifier="hdpi" />
    <gap:icon src="res/icon/96.png" gap:platform="android" gap:qualifier="xhdpi" />
    <gap:icon src="res/icon/96.png" gap:platform="android" gap:qualifier="xxhdpi" />

    <!-- WP -->
    <gap:icon src="res/icon/62.png" gap:platform="winphone" />
    <gap:icon src="res/icon/173.png" gap:platform="winphone" gap:role="background" />

    <!-- Screens -->
    <gap:splash src="splash.png" />

    <!-- iPhone and iPod touch -->
    <gap:splash src="res/screen/320x480.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screen/640x960.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="res/screen/640x1136.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPad -->
    <gap:splash src="res/screen/768x1024.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="res/screen/1024x768.png" gap:platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <gap:splash src="res/screen/768x1024.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="res/screen/2048x1536.png" gap:platform="ios" width="2048" height="1536" />

    <!-- Android -->
    <gap:splash src="res/screen/192x320.png" gap:platform="android" gap:qualifier="ldpi" />
    <gap:splash src="res/screen/288x480.png" gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="res/screen/480x800.png" gap:platform="android" gap:qualifier="hdpi" />
    <gap:splash src="res/screen/720x1200.png" gap:platform="android" gap:qualifier="xhdpi" />
    <gap:splash src="res/screen/720x1200.png" gap:platform="android" gap:qualifier="xxhdpi" />

    <!-- Windows phone -->
    <gap:splash src="res/screen/480x800.jpg" gap:platform="winphone" />

    <!-- plugins -->
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="com.oauthio.plugins.oauthio" version="0.2.4" />
    <gap:plugin name="com.ionic.keyboard" version="1.0.3" />
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.3" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.3.3"/>
    <gap:plugin name="nl.x-services.plugins.toast" />
    <gap:plugin name="org.apache.cordova.globalization" />

    <feature name="Keyboard">
        <param name="id" value="com.ionic.keyboard" />
    </feature>
    <feature name="OAuth.io">
        <param name="id" value="https://github.com/oauth-io/oauth-phonegap" />
    </feature>
    <feature name="Device">
        <param name="id" value="org.apache.cordova.device" />
    </feature>
    <feature name="Geolocation">
        <param name="id" value="org.apache.cordova.geolocation" />
    </feature>
    <feature name="InAppBrowser">
        <param name="id" value="org.apache.cordova.inappbrowser" />
    </feature>
    <feature name="Splashscreen">
        <param name="id" value="org.apache.cordova.splashscreen" />
    </feature>
    <feature name="StatusBar">
        <param name="id" value="org.apache.cordova.statusbar" />
    </feature>
    <feature name="Toast">
        <param name="id" value="https://github.com/EddyVerbruggen/Toast-PhoneGap-Plugin.git" />
    </feature>
    <feature>
        <param name="id" value="org.apache.cordova.globalization" />
    </feature>
    <feature>
        <param name="id" value="net.yoik.cordova.plugins.screenorientation" />
    </feature>
    <feature>
        <param name="id" value="org.apache.cordova.camera" />
    </feature>
    <feature>
        <param name="id" value="org.apache.cordova.file-transfer" />
    </feature>
    <feature>
        <param name="id" value="org.apache.cordova.file" />
    </feature>
</widget>